<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PreBuiltPc">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="372dp"
        android:layout_height="97dp"
        android:layout_marginTop="56dp"
        android:text="What will you be doing with the computer?"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="346dp"
        android:layout_height="68dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/custom_button"
        android:text="Productivity"
        android:textColor="#000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gaming_button" />

    <Button
        android:id="@+id/button3"
        android:layout_width="346dp"
        android:layout_height="68dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/custom_button"
        android:text="Casual/Web Surfing"
        android:textColor="#000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <Button
        android:id="@+id/gaming_button"
        android:layout_width="346dp"
        android:layout_height="68dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/custom_button"
        android:text="Gaming"
        android:textColor="#000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />
</android.support.constraint.ConstraintLayout>